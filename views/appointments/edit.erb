<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Editar Consulta</h1>
    <a href="/appointments/<%= @appointment.id %>" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form method="POST" action="/appointments/<%= @appointment.id %>">
            <input type="hidden" name="_method" value="PUT">
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="pet_id" class="form-label">Pet *</label>
                        <select class="form-control" id="pet_id" name="pet_id" required>
                            <% @pets.each do |pet| %>
                                <option value="<%= pet.id %>" <%= 'selected' if pet.id == @appointment.pet_id %>>
                                    <%= pet.name %> - <%= pet.client.name %>
                                </option>
                            <% end %>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="reason" class="form-label">Motivo da Consulta *</label>
                        <input type="text" class="form-control" id="reason" name="reason" 
                               value="<%= @appointment.reason %>" required>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="date" class="form-label">Data *</label>
                        <input type="date" class="form-control" id="date" name="date" 
                               value="<%= @appointment.date_time.strftime('%Y-%m-%d') %>" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="time" class="form-label">Horário *</label>
                        <input type="time" class="form-control" id="time" name="time" 
                               value="<%= @appointment.date_time.strftime('%H:%M') %>" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="status" class="form-label">Status</label>
                        <select class="form-control" id="status" name="status">
                            <option value="agendada" <%= 'selected' if @appointment.status == 'agendada' %>>Agendada</option>
                            <option value="confirmada" <%= 'selected' if @appointment.status == 'confirmada' %>>Confirmada</option>
                            <option value="concluída" <%= 'selected' if @appointment.status == 'concluída' %>>Concluída</option>
                            <option value="cancelada" <%= 'selected' if @appointment.status == 'cancelada' %>>Cancelada</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="notes" class="form-label">Observações</label>
                <textarea class="form-control" id="notes" name="notes" rows="3"><%= @appointment.notes %></textarea>
            </div>
            
            <div class="d-flex justify-content-end gap-2">
                <a href="/appointments/<%= @appointment.id %>" class="btn btn-outline-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Atualizar Consulta</button>
            </div>
        </form>
    </div>
</div>