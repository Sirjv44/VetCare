<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Pets</h1>
    <a href="/pets/new" class="btn btn-primary">
        <i class="fas fa-plus"></i> Novo Pet
    </a>
</div>

<div class="card">
    <div class="card-body">
        <% if @pets.any? %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Espécie</th>
                            <th>Raça</th>
                            <th>Idade</th>
                            <th>Cliente</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @pets.each do |pet| %>
                            <tr>
                                <td>
                                    <strong><%= pet.name %></strong>
                                    <% if pet.color %>
                                        <br><small class="text-muted"><%= pet.color %></small>
                                    <% end %>
                                </td>
                                <td><%= pet.species %></td>
                                <td><%= pet.breed || 'SRD' %></td>
                                <td><%= pet.age_display %></td>
                                <td><%= pet.client.name %></td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/pets/<%= pet.id %>" class="btn btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/pets/<%= pet.id %>/edit" class="btn btn-outline-secondary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="POST" action="/pets/<%= pet.id %>" style="display: inline;">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="btn btn-outline-danger" 
                                                    onclick="return confirm('Tem certeza que deseja remover este pet?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        <% else %>
            <div class="text-center py-5">
                <i class="fas fa-paw fa-3x text-muted mb-3"></i>
                <h4>Nenhum pet cadastrado</h4>
                <p class="text-muted">Comece adicionando o primeiro pet da clínica.</p>
                <a href="/pets/new" class="btn btn-primary">Cadastrar Pet</a>
            </div>
        <% end %>
    </div>
</div>