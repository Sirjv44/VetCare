<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @client.name %></h1>
    <div class="btn-group">
        <a href="/clients/<%= @client.id %>/edit" class="btn btn-outline-primary">
            <i class="fas fa-edit"></i> Editar
        </a>
        <a href="/clients" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Informações do Cliente</h5>
            </div>
            <div class="card-body">
                <p><strong>Email:</strong> <%= @client.email || 'N/A' %></p>
                <p><strong>Telefone:</strong> <%= @client.phone || 'N/A' %></p>
                <p><strong>Endereço:</strong> <%= @client.address || 'N/A' %></p>
                <p><strong>Cadastrado em:</strong> <%= format_date(@client.created_at) %></p>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Pets do Cliente</h5>
                <a href="/pets/new" class="btn btn-sm btn-primary">
                    <i class="fas fa-plus"></i> Adicionar Pet
                </a>
            </div>
            <div class="card-body">
                <% if @pets.any? %>
                    <div class="row">
                        <% @pets.each do |pet| %>
                            <div class="col-md-6 mb-3">
                                <div class="card pet-card">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-paw text-primary"></i> <%= pet.name %>
                                        </h6>
                                        <p class="card-text mb-1">
                                            <small class="text-muted">
                                                <%= pet.species %> • <%= pet.breed || 'SRD' %> • <%= pet.age_display %>
                                            </small>
                                        </p>
                                        <div class="d-flex justify-content-end">
                                            <a href="/pets/<%= pet.id %>" class="btn btn-sm btn-outline-primary">Ver Detalhes</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                <% else %>
                    <div class="text-center py-4">
                        <i class="fas fa-paw fa-2x text-muted mb-3"></i>
                        <p class="text-muted">Este cliente ainda não possui pets cadastrados.</p>
                        <a href="/pets/new" class="btn btn-primary">Cadastrar Primeiro Pet</a>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>