<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Dashboard</h1>
    <small class="text-muted">Bem-vindo ao sistema da clínica veterinária</small>
</div>

<!-- Cards de estatísticas -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card stats-card stats-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h3 class="card-title"><%= @total_clients %></h3>
                        <p class="card-text">Clientes Cadastrados</p>
                    </div>
                    <div class="stats-icon">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card stats-card stats-success">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h3 class="card-title"><%= @total_pets %></h3>
                        <p class="card-text">Pets Cadastrados</p>
                    </div>
                    <div class="stats-icon">
                        <i class="fas fa-paw"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card stats-card stats-info">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h3 class="card-title"><%= @total_appointments %></h3>
                        <p class="card-text">Consultas Agendadas</p>
                    </div>
                    <div class="stats-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Consultas recentes -->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Próximas Consultas</h5>
                <a href="/appointments" class="btn btn-sm btn-outline-primary">Ver todas</a>
            </div>
            <div class="card-body">
                <% if @recent_appointments.any? %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Data/Hora</th>
                                    <th>Pet</th>
                                    <th>Cliente</th>
                                    <th>Motivo</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @recent_appointments.each do |appointment| %>
                                    <tr>
                                        <td><%= format_datetime(appointment.date_time) %></td>
                                        <td><%= appointment.pet.name %></td>
                                        <td><%= appointment.pet.client.name %></td>
                                        <td><%= appointment.reason %></td>
                                        <td>
                                            <span class="badge <%= appointment.status_badge_class %>">
                                                <%= appointment.status.capitalize %>
                                            </span>
                                        </td>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                <% else %>
                    <p class="text-muted mb-0">Nenhuma consulta agendada no momento.</p>
                <% end %>
            </div>
        </div>
    </div>
</div>